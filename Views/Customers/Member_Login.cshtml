	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

	<link rel="stylesheet" href="~/Content/css/Member_Login.css" />
</head>


<br>

<br>
<div class="container d-flex justify-content-center">
	<h1 style="background-color: pink"> 會員登入</h1>
</div>

<form>

	@*帳號登入*@

		<div class="row  justify-content-md-center">
			<div class="mb-3 col-1 col-sm-1" style="padding-top:5px; padding-right:4px">
				<label for="exampleInputEmail1" class="form-label "> 帳號 : </label>
			</div>
			<div class="col-3">
				<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
			</div>
		@*<div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>*@
		 </div>


	@*密碼登入*@

	<div class="row justify-content-md-center">
		<div class="mb-3 col-1 " style="padding-top:5px; padding-right:4px">
			<label for="exampleInputPassword1" class="form-label">密碼 : </label>
		</div>
		<div class="col-3">
			<input type="password" class="form-control" id="exampleInputPassword1">
		</div>
	</div>

	@*忘記密碼*@

	<div class="row justify-content-md-center">
		<div class="mb-3  col-4 d-flex justify-content-sm-end" >
			<button type="button" class="btn btn-link" >忘記密碼</button>		
		</div>
	</div>

	@*登入*@
	<div class="row justify-content-md-center">
		<div class="mb-3  col-4  d-flex justify-content-sm-end" >
			<div class="d-flex justify-content-sm-start" >
				<button type="button" class="btn btn-primary" style="background-color: brown">註冊</button>
			</div>	
		<div class="d-flex justify-content-sm-end">
			<button type="submit" class="btn btn-primary">登入</button>
		</div>
	</div>

</form>

