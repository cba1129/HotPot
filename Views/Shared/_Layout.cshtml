<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Restaurant</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Restaurant.styles.css" asp-append-version="true" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-light bg-light" >
			<div class="container-fluid" style="background-color:orange">
				<a class="navbar-brand" href="#">LOGO</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="#">最新消息</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">門市資訊</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								菜單品鑑
							</a>
							<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
								<li><a class="dropdown-item" href="#">老饕必吃 </a></li>
								<li><a class="dropdown-item" href="#">精選附食</a></li>
								<li><a class="dropdown-item" href="#">甜點熟食</a></li>
								<li><hr class="dropdown-divider"></li>
								<li><a class="dropdown-item" href="#">點餐</a></li>
							</ul>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">會員專區</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">聯絡我們</a>
						</li>

					</ul>

					<form class="d-flex">
						@* <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"> *@
						<a class="btn btn-outline-success" >人頭</a>
						@if (User.Identity.IsAuthenticated)   // layout 需加入這段
						{
							<span class=  "navber-text me-3"> 歡迎, @User.Identity.Name</span>
							<a class="btn btn-outline-danger" href="@Url.Action("Logout", "Account")">登出</a>
						}
						else
						{
							<a class="btn btn-outline-success" href="@Url.Action("Login", "Account")">登入</a>						
						} 
					</form>

				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-bottom footer text-muted fixed-bottom">
		<div class="container">
			&copy; 2025 - Restaurant - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script> <!--我加的-->
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
